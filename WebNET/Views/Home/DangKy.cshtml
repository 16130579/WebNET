                            </div>
                        </div>
                    </div>

                    <div class="register__content__wrapper">
                        <div class="register__header">
                            <h2>REGISTER ACCOUNT</h2>
                            <p>If you already have an account with us, please login at the login page.</p>
                        </div>
                        @using (Html.BeginForm()) {
                            <div class="register__title">
                                <h5>Your Personal Details</h5>
                            </div>

                            <div class="information">
                                <div>
                                    <label for=""><span>*</span>First Name</label>
                                    @Html.TextBox("user_firstName")
                                </div>

                                <div>
                                    <label for=""><span>*</span>Last Name</label>
                                    @Html.TextBox("user_lastName")
                                </div>

                                <div>
                                    <label for=""><span>*</span>E-Mail</label>
                                    @Html.TextBox("user_email")
                                </div>

                                <div>
                                    <label for=""><span>*</span>Telephone</label>
                                    @Html.TextBox("user_phone")
                                </div>

                                <div class="register__title">
                                    <h5>Your Password</h5>
                                </div>

                                <div class="information">
                                    <div>
                                        <label for=""><span>*</span>Password</label>
                                        @Html.Password("user_password")
                                    </div>

                                    <div>
                                        <label for=""><span>*</span>Password Confirm</label>
                                        <input type="text" name="passwordConfirm" id="passwordConfirm" placeholder="Password Confirm">
                                        <p id="error" style="color:red">@ViewBag.error</p>
                                    </div>
                                </div>

                                <div class="register__title">
                                    <h5>Newsletter</h5>
                                </div>

                                <div class="bottom__register">
                                    <div class="pull__right">
                                        @*I have read and agree to the
                                        <a href="">Privacy Policy</a>
                                        &nbsp;
                                        <input type="checkbox">*@
                                        &nbsp;
                                        <input type="submit" value="Đăng ký" class="continue">                                    </div>
                                </div>

                            </div>
                        }


                    </div>
                </div>
            </div>
        </section>
    </main>

